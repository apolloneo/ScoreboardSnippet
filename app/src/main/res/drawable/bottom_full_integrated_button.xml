<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">


            <padding
                android:right="@dimen/outer_view_stroke_width"
                android:left="@dimen/outer_view_stroke_width"
                android:top="@dimen/outer_view_stroke_width"
                android:bottom="@dimen/outer_view_stroke_width">

            </padding>

        </shape>
    </item>



    <item >
        <shape android:shape="rectangle">


            <gradient
                android:startColor="@color/button_light"
                android:endColor="@color/button_dark"
                android:angle="@integer/button_gradient_angle"/>

            <corners
                android:bottomRightRadius="@dimen/inner_view_corner_radius"
                android:bottomLeftRadius="@dimen/inner_view_corner_radius"/>
        </shape>
    </item>


</layer-list>