<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">

            <padding
                android:top="@dimen/outer_view_stroke_width"
                android:left="@dimen/outer_view_stroke_width"
                android:right="@dimen/outer_view_stroke_width"
                />

            <stroke
                android:color="@color/display_stroke_color"
                android:width="@dimen/outer_view_stroke_width"/>

            <solid
                android:color="@color/black"/>

            <corners
                android:topLeftRadius="@dimen/outer_view_corner_radius"
                android:topRightRadius="@dimen/outer_view_corner_radius"
                />
        </shape>
    </item>


    <item >
        <shape android:shape="rectangle">



            <solid
                android:color="@color/black"/>

            <corners
                android:topLeftRadius="@dimen/outer_view_corner_radius"
                android:topRightRadius="@dimen/outer_view_corner_radius"
                />
        </shape>
    </item>

</layer-list>