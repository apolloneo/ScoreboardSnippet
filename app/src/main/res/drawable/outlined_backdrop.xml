<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>


            <solid
                android:color="@color/backdrop_color"/>

            <padding
                android:left="@dimen/full_screen_outer_padding"
                android:right="@dimen/full_screen_outer_padding"
                android:bottom="@dimen/full_screen_outer_padding"
                android:top="@dimen/full_screen_outer_padding" />

        </shape>

    </item>


    <item>
        <shape>
            <stroke
                android:width="@dimen/inner_screen_stroke_width"
                android:color="@color/white"
                />

            <solid
                android:color="@color/backdrop_color"/>

            <padding
                android:left="0dp"
                android:right="0dp"
                android:bottom="0dp"
                android:top="0dp" />

        </shape>

    </item>







</layer-list>







