<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTimerViewFullDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/independent_display"
    >


    <TextView
        android:padding="10dp"
        android:paddingStart="15dp"
        android:textColor="@color/segment_red"
        android:gravity="center"
        android:id="@+id/tvTimerViewDisplay"
        android:fontFamily="@font/pv7"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="500dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/llTimerViewButtonHolder"
        android:layout_width="match_parent"
        android:layout_height="70dp">


    </LinearLayout>





</LinearLayout>