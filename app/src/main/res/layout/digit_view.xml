<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/independent_display"
    >



    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/llDigitViewDisplaySection"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >


        <TextView
            android:textColor="@color/yellow"
            android:id="@+id/tvDigitDescription"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:maxLines="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingHorizontal="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/pv7"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="500dp"
            android:autoSizeMinTextSize="5dp"
            android:autoSizeStepGranularity="0.1dp"
            android:textColor="@color/white"

            android:maxLines="1"
            android:id="@+id/tvDigitNumber"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout

        android:clickable="true"
        android:gravity="center"
        android:id="@+id/llDigitViewSideButtons"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="match_parent">


        <ImageButton
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_drop_up_black_24dp"
            android:background="@drawable/top_right_integrated_button"
            android:id="@+id/btDigitViewPlus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_arrow_drop_up_black_24dp" />

        <ImageButton
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:background="@drawable/bottom_right_integrated_button"
            android:id="@+id/btDigitViewMinus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             />

    </LinearLayout>


</LinearLayout>


























